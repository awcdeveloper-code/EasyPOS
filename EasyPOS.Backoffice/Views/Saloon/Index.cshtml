@model List<TableOrSeat>
@{
    ViewData["Title"] = "EasyPOS Salón";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>Table Status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        :root {
            --color-gray-600: #6b7280;
            --color-bg: #ffffff;
            --card-bg: #f9fafb;
            --card-shadow: rgba(0, 0, 0, 0.05);
            --border-radius: 0.75rem;
            --transition-duration: 0.3s;
        }

        body {
            margin: 0;
            background-color: var(--color-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: var(--color-gray-600);
            line-height: 1.5;
        }

        .thisContainer {
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 4rem 1.5rem 5rem;
            display: flex;
            gap: 3rem;
            flex-wrap: wrap;
        }

        h1 {
            font-weight: 600;
            font-size: 3rem;
            margin-bottom: 2rem;
            color: #111827;
        }

        .column {
            flex: 1 1 300px;
            display: flex;
            flex-direction: column;
        }

        .column-header {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: #111827;
            border-bottom: 2px solid transparent;
            padding-bottom: 0.4rem;
        }

        .card {
            background-color: var(--card-bg);
            box-shadow: 0 2px 8px var(--card-shadow);
            border-radius: var(--border-radius);
            padding: 1.5rem 1.75rem;
            margin-bottom: 1rem;
            font-weight: 600;
            font-size: 1.25rem;
            color: #111827;
            cursor: default;
            transition: box-shadow var(--transition-duration), transform var(--transition-duration);
            user-select: none;
        }

        .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-3px);
        }

        .column {
            flex: none;
        }
    </style>
</head>
<body>
    <main role="main" class="thisContainer" aria-label="Estado de Mesas y Barras">

        <section class="column" aria-labelledby="available-tables-header">

            <h3 id="available-tables-header" class="column-header">Mesas/Barras Disponibles</h3>

            @foreach (var table in Model.Where(x => x.Status == false))
            {
                <a asp-controller="Saloon" asp-action="TableAssignment" asp-route-id="@table.Id" class="btn btn-primary m-3">@table.Name</a>
            }

        </section>

        <section class="column" aria-labelledby="occupied-tables-header">

            <h3 id="occupied-tables-header" class="column-header">Mesas/Barras Ocupadas</h3>

            @foreach (var table in Model.Where(x => x.Status == true))
            {
                <a asp-controller="Saloon" asp-action="TableDetail" asp-route-id="@table.Id" class="btn btn-success m-3">@table.Name</a>
            }
        </section>
    </main>
</body>
</html>

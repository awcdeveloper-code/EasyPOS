@model ReportProblem
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Reporte de Problema</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Id" class="p-0"></label>
            <input asp-for="Id" class="form-control" style="width: 100px;" readonly/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" style="width: 500px;" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" class="form-control" style="width: 150px;" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="eMail" class="p-0"></label>
            <input asp-for="eMail" class="form-control" style="width: 500px;" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SystemStatus" class="p-0" />
            <input asp-for="SystemStatus" class="form-control" style="width: 500px;" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" class="form-control" rows="6" readonly></textarea>
        </div>
        <div class="row">
            <div class="col-3 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Borrar</button>
            </div>
            <div class="col-3 col-md-3">
                <a asp-controller="Help" asp-action="ReportProblem_Index" class="btn btn-outline-secondary form-control border">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
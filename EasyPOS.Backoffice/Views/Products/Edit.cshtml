@model ProductViewModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar Producto</h2>
            <hr />
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Id" class="p-0"></label>
            <input asp-for="Product.Id" class="form-control" style="width: 150px;" readonly/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Description" class="p-0"></label>
            <input asp-for="Product.Description" class="form-control" style="width: 500px;" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Category" class="p-0"></label>
            <select asp-for="Product.Category" asp-items="Model.Categories" class="form-control" style="width: 250px;"></select>
            <span asp-validation-for="Product.Category" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Cost" class="p-0"></label>
            <input asp-for="Product.Cost" class="form-control" style="width: 150px;" />
            <span asp-validation-for="Product.Cost" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Product.Price" class="p-0"></label>
            <input asp-for="Product.Price" class="form-control" style="width: 150px;" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Product.Stock" class="p-0"></label>
            <input asp-for="Product.Stock" class="form-control" style="width: 150px;" />
            <span asp-validation-for="Product.Stock" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Product.Status" class="p-0"></label>
            <select asp-for="Product.Status" class="form-control" style="width: 150px;">
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
            </select>
            <span asp-validation-for="Product.Status" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-3 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Actualizar</button>
            </div>
            <div class="col-3 col-md-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary form-control border">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
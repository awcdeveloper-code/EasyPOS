@model List<Expense>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@* Import Google Material Icons *@
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
@{
    ViewData["Title"] = "Gastos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            padding: 24px;
            margin: 0;
            line-height: 1.5;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            max-width: 1000px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 6px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.4);
        }

        thead {
            background: linear-gradient(180deg, cyan, darkblue);
            color: #f0f0f0;
        }

        thead th {
            padding: 16px 24px;
            text-align: left;
            font-weight: 700;
            font-size: 1rem;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        }

        tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.07);
            transition: background-color 0.3s ease;
        }

        tbody tr:hover {
            background-color: rgba(107, 91, 149, 0.3);
        }

        tbody td {
            padding: 16px 24px;
            font-weight: 400;
            font-size: 0.95rem;
        }

        @@media (max-width: 640px) {
            body {
                padding: 16px;
            }
            table {
                font-size: 0.9rem;
            }
            thead th, tbody td {
                padding: 12px 16px;
            }
        }

        .icon-button {
            display: inline-flex;
            align-items: center;
            gap: 8px; /* space between icon and text */
        }

        .icon-button
        .material-icons {
            font-size: 20px; /* adjust size as needed */
            line-height: 1;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-black">Lista de Gastos</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary icon-button">
                    <span class="material-icons" aria-hidden="true">add_circle</span>Crear Gasto
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary icon-button">
                    <span class="material-icons" aria-hidden="true">home</span>Regresar
                </a>
            </div>
        </div>
        <table aria-label="Lista de Gastos">
            <thead>
                <tr>
                    <th scope="col" style="width: 150px">Fecha</th>
                    <th scope="col" style="width: 250px">Descripción</th>
                    <th scope="col">Monto</th>
                    <th scope="col" style="width: 300px">Persona que autoriza</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model.OrderBy(item => item.Description))
                    {
                        <tr>
                            <td>@item.Date.ToString("dd-MM-yyyy")</td>
                            <td>@item.Description</td>
                            <td>@item.Amount.ToString("N0", System.Globalization.CultureInfo.InvariantCulture)</td>
                            <td>@item.Approver</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary icon-button">
                                        <span class="material-icons" aria-hidden="true">edit</span>Editar
                                    </a>
                                    <a asp-controller="Expenses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger icon-button">
                                        <span class="material-icons" aria-hidden="true">delete_forever</span>Borrar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" style="text-align:center; color:red;"><strong>NO HAY DATOS DISPONIBLES</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
